#include<bits/stdc++.h>
using namespace std;
int main()
{
        int t;
        cin>>t;
        while(t--)
        {
            int count=0;
            int a[2][2];
            int i,j;
            for(i=0;i<2;i++)
            {
                for(j=0;j<2;j++)
                {
                    cin>>a[i][j];
                    if(a[i][j]==1)count++;
                }
            }
            if(count==0) cout<<"0"<<endl;
            if(count==4) cout<<"2"<<endl;
            if(count==1 || count==2 || count==3) cout<<"1"<<endl;
        }
}
