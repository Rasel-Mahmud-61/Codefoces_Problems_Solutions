#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin>>t;

    while(t--)
    {
        int n;
        int a=2,b=1;
        cin>>n;
        if(n%2==0)
        {
            for(int i=1;i<=n;i++)
            {
                cout<<a<<" ";
                a=a+2;
            }
            cout<<endl;

        }
        else
        {
              for(int i=1;i<=n;i++)
            {
                cout<<b<<" ";
                b=b+1;
            }
            cout<<endl;

        }
    }
}
