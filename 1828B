#include<bits/stdc++.h>
using namespace std;
int main()
{

     int t;
     cin>>t;
     while(t--)
     {
         int n;
         cin>>n;
         int a[n+1];
         for(int i=1;i<=n;i++) cin>>a[i];
         int res=0;
         for(int i=1;i<=n;i++)
         {
             res=__gcd(res,abs(a[i]-i));
         }
          cout<<res<<endl;

     }
}
