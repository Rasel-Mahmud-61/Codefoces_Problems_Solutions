#include<bits/stdc++.h>
using namespace std;
#define ll long long 
int main()
{
    ll t;
    cin>>t;
    while(t--)
    {
        ll n,a,b;
        cin>>n>>a>>b;
        if(n<a) cout<<1<<endl;
        else if(b>=a)
        {
            if(n%a==0) cout<<n/a<<endl;
            else cout<<(n/a)+1<<endl;
        }
        else{
            
            cout<<1<<endl;
        }
    }
}
