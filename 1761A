#include<bits/stdc++.h> 
using namespace std;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,a,b;
        cin>>n>>a>>b;
        if(a==n && a==b)
        {
            cout<<"YES"<<endl;
        }
        else  if(n-b+1>a && n-b+1-a>2)
        {
            cout<<"YES"<<endl;
        }
        else cout<<"NO"<<endl;
    }
}
