#include<bits/stdc++.h>
using namespace std;

int main()
{

       int t;
       cin>>t;
       while(t--){
        int n;
         cin>>n;
         int a[n];
         for(int i=0;i<n;i++) cin>> a[i];
          sort(a,a+n);
         int64_t ans1= 1LL*a[0]*a[1];
         int64_t ans2= 1LL* a[n-2]*a[n-1];
          int64_t ans=max(ans2,ans1);
          cout<<ans<<'\n';

       }
}
