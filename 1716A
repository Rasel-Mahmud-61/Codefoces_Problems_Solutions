#include<bits/stdc++.h> 
using namespace std;
#define  ll long long 
int main()
{
    int t;
    cin>>t;
    while(t--)
    
    {
        ll n;
        cin>>n;
        ll ans=0;
        if(n==1)
        {
            ans=2;
        }
        else
        {
            if(n%3==0) ans+=n/3;
        if(n%3==1)
        {
            ans+=n/3-1;
            ans+=2;
        }
        if(n%3==2)
        {
            ans+=n/3;
            ans+=1;
        }
        
        }
        cout<<ans<<endl;
    }
}
